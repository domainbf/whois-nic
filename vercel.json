{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/vercel.php": {
      "runtime": "vercel-php@0.7.4",
      "maxDuration": 22
    }
  },
  "rewrites": [
    { "source": "/public/:path*", "destination": "/:path*" },
    { "source": "/manifest", "destination": "/api/vercel.php" },
    { "source": "/login", "destination": "/api/vercel.php" },
    { "source": "/api/", "destination": "/api/vercel.php?json=1" },
    { "source": "/:domain([a-zA-Z0-9.-]+\\.[a-zA-Z0-9.-]+)", "destination": "/api/vercel.php?domain=:domain" },
    { "source": "/:domain([a-zA-Z0-9.-]+\\.[a-zA-Z0-9.-]+)/", "destination": "/api/vercel.php?domain=:domain" },
    { "source": "/", "destination": "/api/vercel.php" }
  ],
  "analytics": {
    "enable": true
  }
}
